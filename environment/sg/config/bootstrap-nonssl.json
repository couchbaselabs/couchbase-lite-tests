{
  "bootstrap": {
    "server": "couchbases://${CBS_HOSTNAME}",
    "server_tls_skip_verify": true,
    "username": "admin",
    "password": "password"
  },
  "api": {
    "public_interface": ":4984",
    "admin_interface": ":4985"
  },
  "logging": {
    "console": {
      "enabled": true,
      "log_level": "trace",
      "log_keys": ["WS", "WSFrame", "Sync", "CRUD", "Cache", "Changes", "SyncMsg","HTTP","Javascript"]
    },
    "log_file_path": "/opt/sg/log",
    "debug": {
      "enabled": true,
      "rotation": {
        "max_size": 512,
        "rotated_logs_size_limit": 1024
      }
    }
  } 
}