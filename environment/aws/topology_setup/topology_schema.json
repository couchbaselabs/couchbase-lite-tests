{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "default": {
        "clusters": [
            {
                "server_count": 1
            }
        ],
        "sync_gateways": [
            {
                "cluster": 1
            }
        ]
    },
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "$comment": "Allows config files to declare they conform to this schema. Otherwise ignored."
        },
        "clusters": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "server_count": {
                        "type": "integer",
                        "minimum": 1
                    }
                },
                "required": ["server_count"],
                "additionalProperties": false
            }
        },
        "sync_gateways": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "cluster": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": ["cluster"],
                "additionalProperties": false
            }
        },
        "test_servers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "location": {
                        "type": "string"
                    },
                    "cbl_version": {
                        "type": "string"
                    },
                    "platform": {
                        "type": "string"
                    }
                },
                "required": ["location", "cbl_version", "platform"],
                "additionalProperties": false
            }
        },
        "logslurp": {
            "type": "boolean"
        }
    }
}