{
  "bootstrap": {
    "server": "couchbases://{{server-ip}}",
    "server_tls_skip_verify": true,
    "username": "admin",
    "password": "password"
  },
  "api": {
    "public_interface": ":4984",
    "admin_interface": ":4985"
  },
  "logging": {
    "console": {
      "enabled": true,
      "log_level": "info",
      "log_keys": ["*"]
    },
    "log_file_path": "/home/ec2-user/log",
    "debug": {
      "enabled": true,
      "rotation": {
        "max_size": 512,
        "rotated_logs_size_limit": 1024
      }
    }
  } 
}