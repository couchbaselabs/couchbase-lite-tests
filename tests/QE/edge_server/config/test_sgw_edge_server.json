{
    "$schema": "https://packages.couchbase.com/couchbase-edge-server/config_schema.json",
    "interface": "0.0.0.0:59840",
    "enable_anonymous_users": true,
    "databases": {
        "travel": {
            "path": "/home/ec2-user/database/travel.cblite2",
            "enable_adhoc_queries": true,
            "enable_client_writes": true,
            "enable_client_sync": true
        }
    },
    "users": "/home/ec2-user/user/users.json",
    "replications": [
        {
            "source": "wss://ec2-54-80-162-159.compute-1.amazonaws.com:4984/travel",
            "target": "travel",
            "bidirectional": true,
            "continuous": true,
            "collections": [
                "travel.airlines",
                "travel.routes",
                "travel.airports",
                "travel.landmarks",
                "travel.hotels"
            ],
            "auth": {
                "user": "user1",
                "password": "pass"
            },
            "pinned_cert": "/home/ec2-user/cert/sg_cert.pem"
        }
    ],
    "logging": {
        "console": false,
        "file": {
            "dir": "/home/ec2-user/log",
            "format": "text"
        },
        "domains": {
            "Listener": "info"
        }
    }
}